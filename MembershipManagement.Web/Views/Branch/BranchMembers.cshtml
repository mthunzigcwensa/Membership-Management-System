@model List<ApplicationUser>

<h2>Branch Managers</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.Name</td>
                    <td>@manager.Email</td>
                    <td>@manager.PhoneNumber</td>
                    <td>
                        <form asp-action="RemoveBranchManager" asp-route-branchManagerId="@manager.Id" method="post">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No branch managers found.</p>
}
