<!-- Report Generation Section -->
<div class="container py-4 mt-4">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-info text-white py-3">
            <h2 class="text-center mb-0">Generate Reports</h2>
        </div>
        <div class="card-body">
            <form asp-action="GenerateReports" method="post">
                <div class="mb-3">
                    <label class="form-label">Select Report Type</label>
                    <select name="reportType" class="form-select">
                        <option value="membersSealedInYear">Members Sealed in a Specific Year</option>
                        <option value="membersAwaitingSealing">Members Awaiting Sealing</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Year (for members sealed in a specific year)</label>
                    <input type="number" name="year" class="form-control" placeholder="Enter year">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-info">
                        <i class="bi bi-file-earmark-text"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
